{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductList",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "name": {
        "type": "string"
      },
      "data": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "pattern": "^[0-9]{4}$"
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "cpu_model": {
            "type": "string"
          },
          "hard_disk_size": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "capacity": {
            "type": "string"
          },
          "screen_size": {
            "type": "string"
          }
        },
        "required": [
          "year",
          "price",
          "cpu_model",
          "hard_disk_size",
          "color",
          "capacity",
          "screen_size"
        ],
        "additionalProperties": false
      }
    },
    "required": ["id", "name", "data"],
    "additionalProperties": false
  }
}
